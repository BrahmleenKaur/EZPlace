<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/item_company_marginBottom"
    android:padding="5dp"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/item_company_card_corner_radius"
        android:layout_margin="@dimen/item_company_content_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/item_company_content_margin">

            <TextView
                android:id="@+id/tv_item_company_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_blue"
                android:text="AMAZON - Round 1"
                android:padding="@dimen/item_company_padding"
                android:layout_marginTop="@dimen/item_company_tv_margin_top"
                android:textStyle="bold"
                android:textSize="@dimen/item_company_title_size"/>

            <TextView
                android:id="@+id/tv_item_company_job_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Job profile"
                android:padding="@dimen/item_company_padding"
                android:layout_marginTop="@dimen/item_company_tv_margin_top"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/item_company_job_profile_text_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/item_company_padding"
                android:layout_marginTop="@dimen/item_company_tv_margin_top">

                <TextView
                    android:id="@+id/tv_item_company_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Date"
                    android:textColor="@color/black"
                    android:textSize="@dimen/item_company_date_and_time_text_size" />

                <TextView
                    android:id="@+id/tv_item_company_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Time"
                    android:textColor="@color/black"
                    android:textSize="@dimen/item_company_date_and_time_text_size" />

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>