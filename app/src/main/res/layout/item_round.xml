<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/item_company_margin"
    android:layout_marginTop="@dimen/item_company_margin"
    android:layout_marginEnd="@dimen/item_company_margin"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/greyish_blue"
        app:cardCornerRadius="@dimen/item_company_card_corner_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/item_company_content_margin"
            android:orientation="vertical"
            android:padding="@dimen/item_company_ll_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/item_company_padding">

                <TextView
                    android:id="@+id/tv_item_round_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/item_company_title_size" />

                <TextView
                    android:id="@+id/tv_item_round_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:padding="@dimen/item_company_padding"
                    android:textAllCaps="true"
                    android:textColor="@color/green_dark"
                    android:textSize="@dimen/item_company_title_size" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_item_round_venue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/item_company_tv_margin_top"
                android:padding="@dimen/item_company_padding"
                android:textSize="@dimen/item_company_job_profile_text_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/item_company_tv_margin_top"
                android:orientation="horizontal"
                android:padding="@dimen/item_company_padding">

                <TextView
                    android:id="@+id/tv_item_round_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/item_company_date_and_time_text_size" />

                <TextView
                    android:id="@+id/tv_item_round_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textSize="@dimen/item_company_date_and_time_text_size" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_declare_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_company_tv_margin_top"
                android:backgroundTint="@color/dark_blue"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                app:cardCornerRadius="@dimen/card_view_corner_radius">

                <TextView
                    android:id="@+id/tv_declare_results"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/item_round_btn_padding"
                    android:text="@string/declare_results"
                    android:textColor="@color/white"
                    android:textSize="@dimen/item_round_btn_text_size" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>